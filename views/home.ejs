                    var currentDate = new Date();
                    var nearestVisit = null;
                    var nearestDate = null;

                    files.forEach(function (file) {
                        if (file.data_visit) {
                            var visitDate = new Date(file.data_visit);

                            if (visitDate < currentDate && (!nearestVisit || visitDate > nearestDate)) {
                                nearestVisit = file;
